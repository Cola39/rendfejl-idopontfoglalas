@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<Dnn.Bce.Dnn.Idopontfoglalas.Models.ReservationEntity>

@{
    ViewBag.Title = "Új foglalás létrehozása";
}

<div class="reservation-create-container">
    <h2>Új foglalás</h2>

    <form method="post" action="@Url.Action("Create", "Reservation")">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Teljes név" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email cím" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Telefonszám" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control", type = "datetime-local" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Quantity)
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", placeholder = "Mennyiség" })
        </div>

        <button type="submit" class="btn btn-primary">Foglalás mentése</button>
    </form>
</div>
