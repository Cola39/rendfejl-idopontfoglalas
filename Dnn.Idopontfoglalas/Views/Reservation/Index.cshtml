@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<Dnn.Bce.Dnn.Idopontfoglalas.Models.ReservationEntity>>

@using DotNetNuke.Entities.Users
@using DotNetNuke.Web.Mvc.Helpers

@{
    ViewBag.Title = "Foglalások listája";
    var currentUser = UserController.Instance.GetCurrentUserInfo();
}

<div class="reservation-container">
    <h2>Foglalások</h2>

    <div class="mb-3">
        <a class="btn btn-primary" href="@Url.Action("Create", "Reservation")">Új foglalás</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>Nincs még foglalás.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Név</th>
                        <th>Email</th>
                        <th>Telefonszám</th>
                        <th>Időpont</th>
                        <th>Mennyiség</th>
                        <th>Aktív?</th>
                        <th>Művelet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.ID</td>
                            <td>@reservation.Name</td>
                            <td>@reservation.Email</td>
                            <td>@reservation.Phone</td>
                            <td>@reservation.Time?.ToString("yyyy.MM.dd HH:mm")</td>
                            <td>@reservation.Quantity</td>
                            <td>@(reservation.IsActive == true ? "Igen" : "Nem")</td>
                            <td>
                                @if (reservation.IsActive == true && (reservation.CreatedBy == currentUser.UserID || currentUser.IsInRole("Administrators")))
                                {
                                    <form method="post" action="@Url.Action("Delete", "Reservation")" onsubmit="return confirm('Biztosan törlöd ezt a foglalást?');">
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", reservation.ID)
                                        <button type="submit" class="btn btn-danger btn-sm">Törlés</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
